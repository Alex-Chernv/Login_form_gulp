	/* Цвета */
$white: #ffffff;
$black: #000000;

$blue: #237BEF;
$red: #EB5757;
$gray: #A0A0A0;

	/* Шрифты */
$Roboto: 'Roboto', Arial, Tahoma, sans-serif;

	/* Базовый шрифт, размер и цвет на странице */
$font-family-base: $Roboto;
$font-size-base: 14px;
$font-color-base: $black;

	/* z-index */
$z-index-base: 1;
$z-index-level-1: 5;
$z-index-level-2: 10;
$z-index-level-3: 15;
$z-index-level-4: 20;