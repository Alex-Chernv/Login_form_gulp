.modal {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;

	&.is-active {
		display: block;
	}

	&__background {
		height: 100%;
		background: rgba(0,0,0,0.7);
	}

	&__content {
		@mixin display-flex row, nowrap, center, center;
		height: 100%;
	}

	@media screen and (max-width: 640px) {
		&__form {
			width: 90%;
		}
	}
}