.header {
	padding: 20px;
	background: $blue;

	&__content {
		@mixin display-flex row, nowrap, flex-end;
		max-width: 1024px;
		margin: auto;
	}

	&__button {
		width: 120px;
		height: 45px;
		border: 1px solid $blue;
		box-sizing: border-box;
		border-radius: 90px;

		font-family: Roboto;
		font-style: normal;
		font-weight: normal;
		font-size: 16px;
		line-height: normal;
		text-align: center;
		
		background: $white;
		color: $blue;
	}
}